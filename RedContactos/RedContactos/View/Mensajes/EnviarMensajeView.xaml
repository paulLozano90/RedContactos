<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:customControls="clr-namespace:RedContactos.CustomControls;assembly=RedContactos"
             x:Class="RedContactos.View.Mensajes.EnviarMensajeView">
  <StackLayout>
    <Label Text="Asunto"></Label>
    <customControls:TextBox Text="{Binding Mensaje.asunto}"></customControls:TextBox>
    <Label Text="Mensaje"></Label>
    <Editor Text="{Binding Mensaje.contenido}"></Editor>
    <Button Text="Enviar" Command="{Binding CmdEnviar}"></Button>
  </StackLayout>
</ContentPage>